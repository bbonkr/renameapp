{
    "name": "rename.app",
    "peoductName": "Rename App",
    "version": "1.3.0",
    "description": "Rename files.",
    "main": "dist/main.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "tsc",
        "watch": "tsc --watch",
        "build:dev": "cross-env NODE_ENV=development npm run build",
        "build:prod": "cross-env NODE_ENV=production npm run build",
        "start": "npm run build && electron ./dist/main.js",
        "electron": "electron .",
        "lint": "eslint 'src/**/*.{ts,tsx}'",
        "lint:fix": "eslint 'src/**/*.{ts,tsx}' --quiet --fix",
        "pack:win-x64": "npm run build:prod && electron-builder build --win --x64",
        "pack:win-x86": "npm run build:prod && electron-builder build --win --x84",
        "pack:mac": "npm run build:prod && electron-builder build --mac"
    },
    "author": "bbon (bbon@bbon.kr)",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^13.1.4",
        "@types/react-dom": "^16.9.4",
        "@typescript-eslint/eslint-plugin": "^2.15.0",
        "@typescript-eslint/parser": "^2.15.0",
        "asar": "^2.0.3",
        "cross-env": "^6.0.3",
        "electron": "^7.1.7",
        "electron-builder": "^22.2.0",
        "electron-installer-dmg": "^3.0.0",
        "electron-packager": "^14.1.1",
        "electron-winstaller": "^4.0.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-import": "^2.19.1",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-react-hooks": "^2.3.0",
        "prettier": "^1.19.1",
        "typescript": "^3.7.4"
    },
    "dependencies": {
        "@material-ui/core": "^4.8.0",
        "@material-ui/icons": "^4.5.1",
        "autoprefixer": "^9.7.3",
        "electron-squirrel-startup": "^1.0.0",
        "notistack": "^0.9.7",
        "prop-types": "^15.6.2",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-transition-group": "^4.3.0"
    },
    "build": {
        "productName": "Rename App",
        "appId": "kr.bbon.renameapp",
        "asar": true,
        "protocols": {
            "name": "RenameApp",
            "schemes": [
                "Renameapp"
            ]
        },
        "files": [
            "index.html",
            "dist/**/*"
        ],
        "mac": {
            "target": [
                "default"
            ],
            "icon": "./resources/installer/appicon.icns"
        },
        "dmg": {
            "title": "Rename App",
            "icon": "./resources/installer/appicon.icns"
        },
        "win": {
            "target": [
                "zip",
                "nsis"
            ],
            "icon": "./resources/installer/appicon.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm",
                "zip",
                "tar.gz"
            ],
            "icon": "./resources/installer/appicon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "directories": {
            "buildResources": "resources/installer/",
            "output": "packages/",
            "app": "."
        }
    }
}
