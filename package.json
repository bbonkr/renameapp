{
    "name": "rename",
    "peoductName": "Rename",
    "version": "1.3.0",
    "description": "Rename files.",
    "main": "dist/main.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "tsc",
        "watch": "tsc --watch",
        "build:dev": "cross-env NODE_ENV=development npm run build",
        "build:prod": "cross-env NODE_ENV=production npm run build",
        "start": "npm run build && electron ./dist/main.js",
        "electron": "electron .",
        "lint": "tslint -c tslint.json -p tsconfig.json",
        "pack:win-x64": "npm run build:prod && electron-builder build --win --x64",
        "pack:win-x86": "npm run build:prod && electron-builder build --win",
        "pack:win": "npm run build:prod && electron-builder build --win --x64 && electron-builder build --win",
        "pack:mac": "npm run build:prod && electron-builder build --mac"
    },
    "author": "bbon (bbon@bbon.kr)",
    "license": "MIT",
    "devDependencies": {
        "@types/react-dom": "^16.9.4",
        "asar": "^2.0.3",
        "cross-env": "^6.0.3",
        "electron": "^9.4.0",
        "electron-builder": "^22.2.0",
        "electron-installer-dmg": "^3.0.0",
        "electron-packager": "^14.1.1",
        "electron-winstaller": "^4.0.0",
        "prettier": "^1.19.1",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-config-standard": "^9.0.0",
        "tslint-react": "^4.1.0",
        "typescript": "^3.7.4"
    },
    "dependencies": {
        "@material-ui/core": "^4.8.0",
        "@material-ui/icons": "^4.5.1",
        "autoprefixer": "^9.7.3",
        "electron-squirrel-startup": "^1.0.0",
        "notistack": "^0.9.7",
        "prop-types": "^15.6.2",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-transition-group": "^4.3.0"
    },
    "build": {
        "productName": "Rename",
        "appId": "kr.bbon.rename",
        "asar": true,
        "protocols": {
            "name": "Rename",
            "schemes": [
                "kr.bbon.Rename"
            ]
        },
        "files": [
            "index.html",
            "dist/**/*"
        ],
        "mac": {
            "target": [
                "default"
            ],
            "icon": "./resources/installer/appicon.icns"
        },
        "dmg": {
            "title": "Rename App",
            "icon": "./resources/installer/appicon.icns"
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ],
            "icon": "./resources/installer/appicon.ico",
            "artifactName": "${productName}-${os}-${arch}-${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "artifactName": "${productName} Setup ${os}-${arch}-${version}.${ext}"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm",
                "zip",
                "tar.gz"
            ],
            "icon": "./resources/installer/appicon.png"
        },
        "directories": {
            "buildResources": "resources/installer/",
            "output": "packages/",
            "app": "."
        }
    }
}
