{
    "name": "rename",
    "peoductName": "Rename",
    "version": "1.4.0",
    "description": "Rename files.",
    "main": "dist/main.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "webpack",
        "watch": "webpack --watch",
        "build:dev": "cross-env NODE_ENV=development npm run build",
        "build:prod": "cross-env NODE_ENV=production npm run build",
        "start": "npm run build && electron ./dist/main.js",
        "electron": "electron .",
        "lint": "tsc --noEmit && eslint --ext .ts,.tsx ./src",
        "lint:fix": "eslint 'src/**/*.{ts,tsx}' --quiet --fix",
        "pack:win-x64": "npm run build:prod && cross-env NODE_ENV=production electron-builder build --win --x64",
        "pack:win-x86": "npm run build:prod && cross-env NODE_ENV=production electron-builder build --win",
        "pack:win": "npm run build:prod && electron-builder build --win --x64 && electron-builder build --win",
        "pack:mac": "npm run build:prod && cross-env NODE_ENV=production electron-builder build --mac",
        "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && electron ./dist/main.js\"",
        "!!!dev:renderer": "does not work! parcel index.html --port 3000 --no-cache --out-dir .build --target electron",
        "!!!build:renderer": "does not work! parcel build index.html --no-cache --no-source-maps --out-dir .build --public-url ./ --target electron",
        "webpack": "webpack"
    },
    "author": "bbon (bbon@bbon.kr)",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^14.14.22",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "asar": "^3.0.3",
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.3",
        "css-loader": "^5.0.1",
        "electron": "^11.2.1",
        "electron-builder": "^22.9.1",
        "electron-installer-dmg": "^3.0.0",
        "electron-packager": "^15.2.0",
        "electron-winstaller": "^4.0.1",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^4.5.1",
        "parcel": "^1.12.4",
        "prettier": "^2.2.1",
        "style-loader": "^2.0.0",
        "ts-loader": "^8.0.14",
        "typescript": "^4.1.3",
        "wait-on": "^5.2.1",
        "webpack": "^5.19.0",
        "webpack-cli": "^4.4.0"
    },
    "dependencies": {
        "@material-ui/core": "^4.11.3",
        "@material-ui/icons": "^4.11.2",
        "autoprefixer": "^10.2.4",
        "electron-squirrel-startup": "^1.0.0",
        "notistack": "^1.0.3",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-transition-group": "^4.4.1"
    },
    "build": {
        "productName": "Rename",
        "appId": "kr.bbon.rename",
        "asar": true,
        "protocols": {
            "name": "Rename",
            "schemes": [
                "kr.bbon.Rename"
            ]
        },
        "files": [
            "index.html",
            "dist/**/*"
        ],
        "mac": {
            "target": [
                "default"
            ],
            "icon": "./resources/installer/appicon.icns"
        },
        "dmg": {
            "title": "Rename App",
            "icon": "./resources/installer/appicon.icns"
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ],
            "icon": "./resources/installer/appicon.ico",
            "artifactName": "${productName}-${os}-${arch}-${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "artifactName": "${productName} Setup ${os}-${arch}-${version}.${ext}"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm",
                "zip",
                "tar.gz"
            ],
            "icon": "./resources/installer/appicon.png"
        },
        "directories": {
            "buildResources": "resources/installer/",
            "output": "packages/",
            "app": "."
        }
    }
}
